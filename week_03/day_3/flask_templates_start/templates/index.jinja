{% extends "base.jinja"%} 
{% block content %}
<h1>{{ title }} !!!</h1>

<form action="/tasks" method="post" >
  <label for="title">Title</label>
  <input type="text" name="title" id="title">

  <label for="description">Description</label>
  <textarea name="description" id="description" rows="2" cols="30" placeholder="stuff"></textarea>

  <input type="submit" value="Add Task">

</form>

<ul>
{% for task in tasks %}  
  <li>
    {{ task.title }}: <b>{{ task.description }}</b>
    {% if task.done %}
    <span> &#9989;</span>
    {% endif %}
  </li>
{% endfor %}
</ul>
{% endblock%}